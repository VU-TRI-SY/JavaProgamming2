package tut3;

import java.util.Scanner;

public class Ex4 {

    public static void main(String[] args) {
    	//create constant String "TEMPLATE"
        final String TEMPLATE = "public class _ClassName_ {\n" +
                "    public static void main(String[] args) {\n" +
                "        System.out.println(\"_Greeting_\");\n" +
                "    }\n" +
                "}";
        
        Scanner sc = new Scanner(System.in);
        String generatedCode = template;
        generatedCode = generatedCode.replace("_ClassName_", promptForValue(scanner, "Enter class name: "));
        generatedCode = generatedCode.replace("_Greeting_", promptForValue(scanner, "Enter greeting: "));
        String className;
        String greetingMsg;
        System.out.print("Enter class name:"); 
        className = sc.nextLine();
        
        System.out.print("Enter greeting message:"); 
        greetingMsg = sc.nextLine();
        
        
        
        
    }
}

