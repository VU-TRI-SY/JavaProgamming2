package tut4;

public class Arrays {

	public int countNegatives(int[] arr) {
		int count = 0;
		for(int i = 0; i < arr.length; i++) {
			if(arr[i] < 0) {
				count ++;
			}
		}
		
		return count;
	}
	
	public int countEvens(int[] arr) {
		int count = 0;
		for(int i = 0; i < arr.length; i++) {
			if(arr[i] % 2 == 0) {
				count ++;
			}
		}
		
		return count;
	}
	
	public double[] divArray(double[] arr, double div) {
		
		return new double[10];
	}
	
	public int min(int[] arr) {
		
		return 0;
	}
	
	public boolean isAscSorted(int[] arr) {
		
		return true;
	}
	
	public int length(char[] arr) {
		int len = 0;
	    for (char c : arr) {
	        if (c == '\u0000') {
	            break;
	        }
	        len++;
	    }
	    return len;
	}
	
	public double median(double[] arr) {
//		Arrays.sort(arr);
		int n = arr.length;
		double med;
	    if (n % 2 == 0) {
	    	med = ((double)arr[n/2] + (double)arr[n/2 - 1])/2;
	    } else {
	    	med = (double) arr[n/2];
	    }
	    return med;
		
	}
	
	public String compare(double[] a, double[] b) {
		String result = "";
	    int lenA = a.length;
	    int lenB = b.length;
	    int i = 0, j = 0;
	    
	    // check if a is a subset of b
	    while (i < lenA && j < lenB) {
	        if (a[i] < b[j]) {
	            i++;
	        } else if (a[i] == b[j]) {
	            i++;
	            j++;
	        } else {
	            break;
	        }
	    }
	    if (i == lenA) {
	        if (j == lenB) {
	            result = "a = b";
	        } else {
	            result = "a ⊂ b";
	        }
	    }
	    
	    // check if a is a superset of b
	    i = 0; j = 0;
	    while (i < lenA && j < lenB) {
	        if (a[i] < b[j]) {
	            break;
	        } else if (a[i] == b[j]) {
	            i++;
	            j++;
	        } else {
	            j++;
	        }
	    }
	    if (j == lenB) {
	        result = "a ⊃ b";
	    }
	    
	    // check if a intersects b
	    i = 0; j = 0;
	    while (i < lenA && j < lenB) {
	        if (a[i] < b[j]) {
	            i++;
	        } else if (a[i] == b[j]) {
	            result = "a ∩ b";
	            break;
	        } else {
	            j++;
	        }
	    }
	    
	    return result;
	}
	
	public int[] freq(double[] arr) {
		
		return new int[10];
	}
}
